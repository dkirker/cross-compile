<!-- background images -->
<osd enabled="yes" type="text" x="0" y="0" w="480" h="18" label=" Distance: ${navigation.item.destination_length[named]} - Arrival: ${navigation.item.destination_time[arrival]}, ${navigation.item.destination_time[remaining]} - R:${vehicle.position_radius}m" background_color="#000000FF" align="4"/>
<osd enabled="yes" type="image" x="0" y="-128" w="480" h="128" src="PreNav/bottom_bg.png" />
<osd enabled="yes" type="image" x="-20" y="-74" w="20" h="20" src="PreNav/ecke_ur.png" />

<!-- menu right/top-right -->
<osd enabled="yes" type="image" x="-70" y="18" w="20" h="20" src="PreNav/ecke_or.png" />
<osd enabled="yes"  type="button" x="-50" y="18" w="50" h="50" command="zoom_out()" src="PreNav/zoom_out.png"/>
<osd enabled="yes" type="toggle_announcer" x="-50" y="68" w="50" h="50" icon_src="$NAVIT_SHAREDIR/xpm/PreNav/%s.png" background_color="#00000088"/>
<osd enabled="yes" type="button" command="zoom_to_route()" x="-50" y="118" w="50" h="50" src="PreNav/zoom_route.png"/>
<osd enabled="yes" type="button" x="-50" y="168"  w="50" h="50" command="zoom_in()" src="PreNav/zoom_in.png"/>

<!-- bottom-left elements -->
<osd enabled="yes" type="text" label="${navigation.item.street_name} ${navigation.item.street_name_systematic}" x="126" y="-50" w="400" h="20" align="4" font_size="220" background_color="#000000FF"/>
<osd enabled="yes" type="text" label="${navigation.item[1].street_name} ${navigation.item[1].street_name_systematic}" x="120" y="-26" w="400" h="25" align="4" font_size="350" background_color="#000000FF"/>
<osd enabled="yes" type="text" label="${navigation.item[1].length[named]}" x="0" y="-26" w="110" h="30" align="15" background_color="#000000FF" font_size="350"/>
<osd enabled="yes" type="navigation_next_turn"	x="20" y="-97"	w="64"	h="64"	align="0" icon_src="$NAVIT_SHAREDIR/xpm/%s_bk_64_64.png" background_color="#FFFFFFFF" />
<osd enabled="yes" type="speed_cam" w="206" h="20" x="114" y="406" announce_on="1" background_color="#000000cc" font_size="220" label="${camera_type} | ${distance} | ${speed_limit}km/h" />

